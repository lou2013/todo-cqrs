{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gate-way/src",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": "apps/api-gate-way",
  "projects": {
    "api-gate-way": {
      "type": "application",
      "root": "apps/api-gate-way",
      "entryFile": "main",
      "sourceRoot": "apps/api-gate-way/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gate-way/tsconfig.app.json"
      }
    },
    "todo": {
      "type": "application",
      "root": "apps/todo",
      "entryFile": "main",
      "sourceRoot": "apps/todo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/todo/tsconfig.app.json",
        "assets": [
          {
            "include": "./shared/configs/*.yml",
            "outDir": "./dist/apps/todo/shared/configs",
            "watchAssets": true
          }
        ]
      }
    }
  }
}